            <Button x:Name="three" Content="3" HorizontalAlignment="Left" Height="59" Margin="547,101,0,0" VerticalAlignment="Top" Width="62" FontSize="22" FontWeight="Bold" FontFamily="Segoe UI Black" Background="#FFFFD5B2" BorderThickness="3" RenderTransformOrigin="0.349,1.219"  Click="Nro_Click"/>
