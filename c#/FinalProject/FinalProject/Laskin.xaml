                <Button x:Name="six" Content="6" HorizontalAlignment="Left" Height="59" Margin="547,185,0,0" VerticalAlignment="Top" Width="62" FontSize="22" FontWeight="Bold" FontFamily="Segoe UI Black" Background="#FFFFD5B2" BorderThickness="3" RenderTransformOrigin="0.349,1.219"  Click="Nro_Click"/>
            <Button x:Name="seven" Content="7" HorizontalAlignment="Left" Height="59" Margin="373,267,0,0" VerticalAlignment="Top" Width="62" FontSize="22" FontWeight="Bold" FontFamily="Segoe UI Black" Background="#FFFFD5B2" BorderThickness="3" RenderTransformOrigin="0.349,1.219"  Click="Nro_Click"/>
            <Button x:Name="eight" Content="8" HorizontalAlignment="Left" Height="59" Margin="460,267,0,0" VerticalAlignment="Top" Width="62" FontSize="22" FontWeight="Bold" FontFamily="Segoe UI Black" Background="#FFFFD5B2" BorderThickness="3" RenderTransformOrigin="0.349,1.219"  Click="Nro_Click"/>
            <Button x:Name="nine" Content="9" HorizontalAlignment="Left" Height="59" Margin="547,265,0,0" VerticalAlignment="Top" Width="62" FontSize="22" FontWeight="Bold" FontFamily="Segoe UI Black" Background="#FFFFD5B2" BorderThickness="3" RenderTransformOrigin="0.349,1.219" Click="Nro_Click" />
        <Button x:Name="plus" Content="+" HorizontalAlignment="Left" Height="84" Margin="645,67,0,0" VerticalAlignment="Top" Width="82" FontSize="48" FontWeight="Bold" FontFamily="Segoe UI Black" Background="#FF6B8EBE" BorderThickness="3" RenderTransformOrigin="0.349,1.219" Click="Nro_Click" >
            </Button>
            <Button x:Name="minus" Content="-" HorizontalAlignment="Left" Height="84" Margin="647,163,0,0" VerticalAlignment="Top" Width="82" FontSize="48" FontWeight="Bold" FontFamily="Segoe UI Black" Background="#FF6B8EBE" BorderThickness="3" RenderTransformOrigin="0.349,1.219" Click="Nro_Click" />
