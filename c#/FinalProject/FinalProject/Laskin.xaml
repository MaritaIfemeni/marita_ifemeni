        <Button x:Name="equals" Content="=" HorizontalAlignment="Left" Height="84" Margin="647,262,0,0" VerticalAlignment="Top" Width="82" FontSize="48" FontWeight="Bold" FontFamily="Segoe UI Black" Background="#FF6B8EBE" BorderThickness="3" RenderTransformOrigin="0.349,1.219" Click="Equals_Click"/>
        <TextBox x:Name="result" HorizontalAlignment="Left" Height="70" Margin="34,140,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="282" FontSize="24"/>
            <Button Content="Tyhjennä" HorizontalAlignment="Left" Height="43" Margin="198,241,0,0" Background="Aquamarine" VerticalAlignment="Top" Width="118" Click="Empty_Click"/>
        

    </Grid>
    </DockPanel>
</Window>

